<div class="navigation">
    <nav aria-label="...">
        <ul class="pagination ">
            <li class="page-item {% if page <= 1 %} disabled {% endif %}">
                <a class="page-link " href="{{ path('partner_finance_index', {'page': page - 1}) }}" tabindex="-1">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>

            {% for i in (page-5)..(page+5) %}
                {% if i > 0 and i <= count_pages %}
                    <li class="page-item {% if page == i %} active {% endif %} ">
                        <a class="page-link" href="{{ path('partner_finance_index', {'page': i}) }}">{{ i }}<span
                                    class="sr-only">(current)</span></a>
                    </li>
                {% endif %}
            {% endfor %}


            <li class="page-item {% if page >= count_pages %} disabled {% endif %}">
                <a class="page-link" href="{{ path('partner_finance_index', {'page': page + 1}) }}">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        </ul>
    </nav>
</div>